################################################################################
#                         COMMANDS                                             #
################################################################################

CC = c++
RM = rm -rf
MKDIR = mkdir -p

################################################################################
#                         EXECUTABLES                                          #
################################################################################

NAME = megaphone

################################################################################
#                         SOURCES                                              #
################################################################################

SRCS =	megaphone.cpp

################################################################################
#                         OBJECTS                                               #
################################################################################

OBJS = ${addprefix $(OBJS_PATH), $(SRCS:.cpp=.o)}

################################################################################
#                         DIRECTORIES                                          #
################################################################################

OBJS_PATH = objects/
SRCS_PATH = srcs/

################################################################################
#                         FLAGS                                                #
################################################################################

CFLAGS = -std=c++98 -Wall -Wextra -Werror 
ifeq ($(DEBUG), 1)
	CFLAGS += -fsanitize=address -fsanitize=leak -g3
endif

################################################################################
#                         RULES                                                #
################################################################################

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

$(OBJS_PATH)%.o: $(SRCS_PATH)%.cpp
	$(MKDIR) $(OBJS_PATH)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	${RM} ${OBJS_PATH}

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
