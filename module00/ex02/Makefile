################################################################################
#                         COMMANDS                                             #
################################################################################

CC = c++
RM = rm -rf
MKDIR = mkdir -p

################################################################################
#                         EXECUTABLES                                          #
################################################################################

NAME = Account

################################################################################
#                         SOURCES                                              #
################################################################################

SRCS =	tests.cpp\
		Account.cpp\

################################################################################
#                         OBJECTS                                              #
################################################################################

OBJS = ${addprefix $(OBJS_PATH), $(SRCS:.cpp=.o)}

################################################################################
#                         DIRECTORIES                                          #
################################################################################

OBJS_PATH = objects/
SRCS_PATH = srcs/
INCS_PATH = includes/

################################################################################
#                         FLAGS                                                #
################################################################################

CFLAGS = -std=c++98 -Wall -Wextra -Werror
LFLAGS = -std=c++98 -Wall -Wextra -Werror

################################################################################
#                         RULES                                                #
################################################################################

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(LFLAGS) $(OBJS) -o $(NAME)

$(OBJS_PATH)%.o: $(SRCS_PATH)%.cpp
	$(MKDIR) $(dir $@)
	$(CC) $(CFLAGS) -c $< -o $@ -I $(INCS_PATH)

clean:
	${RM} ${OBJS_PATH}

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
