################################################################################
#                         COMMANDS                                             #
################################################################################

CC = c++
RM = rm -rf
MKDIR = mkdir -p

################################################################################
#                         EXECUTABLES                                          #
################################################################################

NAME = truetype

################################################################################
#                         SOURCES                                              #
################################################################################

SRCS =	main.cpp

################################################################################
#                         OBJECTS                                              #
################################################################################

OBJS = ${addprefix $(OBJS_PATH), $(SRCS:.cpp=.o)}
DEPS = ${addprefix $(DEPS_PATH), $(SRCS:.cpp=.d)}

################################################################################
#                         DIRECTORIES                                          #
################################################################################

OBJS_PATH = objs/
SRCS_PATH = srcs/
INCS_PATH = incs/
DEPS_PATH = deps/

################################################################################
#                         FLAGS                                                #
################################################################################

CFLAGS = -std=c++98 -Wall -Wextra -Werror -MMD -MP
LFLAGS = -std=c++98 -Wall -Wextra -Werror

################################################################################
#                         RULES                                                #
################################################################################

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

-include $(DEPS)

$(OBJS_PATH)%.o: $(SRCS_PATH)%.cpp
	$(MKDIR) $(OBJS_PATH)
	$(MKDIR) $(DEPS_PATH)
	$(CC) $(LFLAGS) -c $< -o $@

clean:
	${RM} ${OBJS_PATH}
	${RM} ${DEPS_PATH}

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
